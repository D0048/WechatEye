{
  "name": "Wechat Eye",
  "version": "1.0",
  "description": "A browser extension for filtering unwanted users from wechat groups.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Wechat Eye",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/haha16.png",
      "32": "images/haha32.png",
      "48": "images/haha48.png",
      "128": "images/haha128.png"
    }
  },
  "icons": {
    "16": "images/haha16.png",
    "32": "images/haha32.png",
    "48": "images/haha48.png",
    "128": "images/haha128.png"
  },
  "web_accessible_resources": [
    "images/*.png",
    "templates/*",
    "detector.js"
  ],
  "manifest_version": 2
}
